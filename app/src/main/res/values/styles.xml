<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Text">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="Title" parent="Text">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTitle" parent="Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleBar" parent="SmallTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallTitlePrimaryColor" parent="SmallTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LargeTitle" parent="Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Body" parent="Text">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">@font/font_yekan_bakh_fa_num_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>