<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.faraji.challenge.vira.ui.selectionpage.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_MainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_UploadFragment"
            app:destination="@id/uploadFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.faraji.challenge.vira.ui.mainpage.MainFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_main">

    </fragment>
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.faraji.challenge.vira.ui.uploadpage.UploadFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_main">

    </fragment>
</navigation>